{
  "manifest_version": 3,
  "name": "挪威语单词高亮（分级版）",
  "version": "1.0",
  "description": "自动按 level 高亮网页中的挪威语单词及其变体，并支持分级开关",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*/*.txt"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["wordsdetail.json", "myown.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
